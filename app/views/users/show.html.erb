<h3>
<%= @user.name %>

</h3>

<div class="container">

<table class="table">
  <thead>
    <tr class="text-center">

      <th scope="col">Name</th>
      <th scope="col">Profile</th>
      <th scope="col">Friend Status</th>

    </tr>
  </thead>
  <tbody>
    <tr class="text-center">
      <td class="text-center"><%= @user.name %></td>
      <td class="text-center"><%= link_to 'See Profile',  user_path(@user), class: 'profile-link' %></td>
      <td class="text-center"><%= friendship_button(@user) %></td>
    </tr>
  </tbody>
</table>

</div>

<% if verify_friendship(@user) %>
  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
<% end %>
  
